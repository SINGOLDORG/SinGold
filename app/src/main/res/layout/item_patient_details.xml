<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="7dp"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/shafaf"
        app:cardCornerRadius="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
            android:text="Last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textLName"
                    android:layout_weight="1" />

                <TextView
            android:text="First_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textFName"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
            android:text="Year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textYear"
                    android:layout_weight="1" />

                <TextView
            android:text="PId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPid"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
        android:text="Family_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textFamilyPhone"
                android:layout_weight="1" />

            <TextView
        android:text="Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textAddress"
                android:layout_weight="1" />

            <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
                android:baselineAligned="false">

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@mipmap/ic_info1"
                    android:id="@+id/btnInfo"
                    android:background="@color/shafaf"
                    android:onClick="onClick"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/btnMusic"
                    android:background="#00000000"
                    android:onClick="onClick"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:elevation="0dp"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:text="@string/new_matching"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/newMatching"

                    app:srcCompat="@drawable/ic_mathing"
                    android:background="@color/shafaf"
                    android:elevation="0dp"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:layout_weight="1"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:text="@string/questionaire"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_questionaire"
                    android:background="#00000000"

                    android:id="@+id/Questionaire"
                    android:layout_weight="1"
                    android:scaleType="centerInside" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>