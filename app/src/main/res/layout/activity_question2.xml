<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zumoappname.Question1Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/name"
            android:id="@+id/imageView" />

        <TextView
            android:text="@string/dance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rgQ4">

            <RadioButton
                android:text="@string/waltz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton13" />

            <RadioButton
                android:text="@string/tango"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton14" />

            <RadioButton
                android:text="@string/samba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton15" />

        </RadioGroup>

        <TextView
            android:text="@string/loazi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rgQ5">

            <RadioButton
                android:text="@string/jaz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton17" />

            <RadioButton
                android:text="@string/rock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton18" />

            <RadioButton
                android:text="@string/pollack"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:id="@+id/radioButton19" />

        </RadioGroup>

        <TextView
            android:text="@string/religion"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/textView12" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rgQ6">

            <RadioButton
                android:text="@string/chazanout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton10" />

            <RadioButton
                android:text="from prayer"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:id="@+id/radioButton11" />

            <RadioButton
                android:text="propnents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton7" />

        </RadioGroup>
    </LinearLayout>

</RelativeLayout>
