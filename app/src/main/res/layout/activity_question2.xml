<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zumoappname.Question1Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/name"
            android:id="@+id/imageView" />

        <TextView
            android:text="dance "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dance" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rgQ4">

            <RadioButton
                android:text="tango"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tango" />

            <RadioButton
                android:text="waltz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/waltz" />

            <RadioButton
                android:text="samba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/samba" />

        </RadioGroup>

        <TextView
            android:text="loazi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loazi" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rgQ5">

            <RadioButton
                android:text="jaz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jaz" />

            <RadioButton
                android:text="rock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rock" />

            <RadioButton
                android:text="pollack"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:id="@+id/pollack" />

        </RadioGroup>

        <TextView
            android:text="religion"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/reliegion" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rgQ6">

            <RadioButton
                android:text="chazanout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chazanout" />

            <RadioButton
                android:text="from pray"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:id="@+id/from pray" />

            <RadioButton
                android:text="propnents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/propnents" />

        </RadioGroup>
    </LinearLayout>

</RelativeLayout>
